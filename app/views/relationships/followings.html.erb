<h2>Follow Users</h2><br/>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><%= render 'follow_list', users: @users %></td>
        <td><%= link_to 'Show', user %></td>
    <% end %>
    </tr>
  </tbody>
</table>